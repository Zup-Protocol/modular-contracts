{
  "name": "modular-contracts",
  "author": "Zup Protocol",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zup-Protocol/modular-contracts.git"
  },
  "engines": {
    "node": ">=20",
    "yarn": ">=4"
  },
  "scripts": {
    "lint": "solhint 'src/**/*.sol' --max-warnings 0",
    "test": "forge test -vvv",
    "prepare": "husky",
    "postinstall": "forge install",
    "deploy:Modular": "forge script script/DeployModular.s.sol --broadcast --verify --trezor -vvvv --rpc-url$1",
    "deploy:UniswapV3PoolModule": "forge script script/modules/DeployUniswapV3PoolModule.s.sol --broadcast --verify --trezor -vvvv --rpc-url$1"
  },
  "license": "GPL-3.0-only",
  "devDependencies": {
    "husky": "^9.1.7",
    "solhint": "^6.0.1",
    "solhint-plugin-chainlink-solidity": "npm:@chainlink/solhint-plugin-chainlink-solidity@^1.0.1",
    "solhint-plugin-prettier": "^0.1.0"
  }
}